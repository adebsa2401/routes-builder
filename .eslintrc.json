{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unsafe-argument": "off"
  },
  "ignorePatterns": [
    "dist",
    "specs",
    "node_modules",
    "jest.config.js"
  ]
}
